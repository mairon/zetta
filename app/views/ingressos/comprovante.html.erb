<body onload="window.print()">


  <table align="left" valign="top">
    <tr>
      <td colspan="4" align="center">
        <FONT FACE="times new roman" size="3">
          --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        </FONT>
      </td>
    </tr>

    <tr>
      <td >
          <FONT FACE="times new roman" size="4">
            <%= $empresa_nome %>
          </FONT>
     </td>
      <td align="right">
          <FONT FACE="times new roman" size="4">
            COMPROVANTE DE INGRESO N.:<%=@ingresso.id%>
          </FONT>
     </td>
    </tr>

    <tr>       

      <td align="right" colspan="2">
          <FONT FACE="times new roman" size="3">
             Fecha :<%= @ingresso.data.strftime("%d/%m/%Y") %>
          </FONT>
       </td>
    </tr>
    <tr>

      <td align="right" colspan="2">
          <FONT FACE="times new roman" size="3">
             Hora :<%=Time.now.strftime("%H:%M:%S")%>
          </FONT>
       </td>
    </tr>

    <tr>
      <td colspan="4" align="center">
        <FONT FACE="times new roman" size="3">
          --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        </FONT>
      </td>
    </tr>

    <tr>
      <td align="left" colspan="2">
        <table>
          <tr>
            <td>
              <FONT FACE="times new roman" size="3">
                Cuenta : <%= @ingresso.conta_nome %>
              </FONT>
            </td>
             <% if @ingresso.moeda == 0 %>
               <% in_moeda = 'DOLAR'%>               
             <% else %>  
               <% in_moeda = 'GUARANIES'%>
             <% end %>  
            <td align="left">
                <FONT FACE="times new roman" size="3">
                  Moneda : <%= in_moeda %>
                </FONT>
            </td>

            <td align="left">
                <FONT FACE="times new roman" size="3">
                  Cheque : <%= @ingresso.cheque %>
                </FONT>
            </td>

          </tr>          
          <tr>
          	<td colspan="3">Monto :
             <% if @ingresso.moeda == 0 %>
              <%= number_to_currency(@ingresso.valor_dolar, :format=>' %n ', :separeitor => ',')  %>
             <% else %> 
              <%= number_to_currency(@ingresso.valor_guarani, :format=>' %n ', :precision => 0)  %>
             <% end %> 
          	
          	</td>
          </tr>
        </table>
      </td>
    </tr>

   	 <tr>
       <td colspan="4" align="center">
        <FONT FACE="times new roman" size="3">
          --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        </FONT>
      </td>
    </tr>


    <tr>
      <td align="left" colspan="2">
        <table>
          <tr>
            <td>
              <FONT FACE="times new roman" size="3">
                Rubro : <%= @ingresso.rubro_nome %>
              </FONT>
            </td>  
          </tr>

        </table>
      </td>
    </tr>

    <tr>
      <td align="center" colspan="4">
        <FONT FACE="times new roman" size="3">
          --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        </FONT>
      </td>
    </tr>

    <tr height="220">
      <td valign="top" colspan="2">
        <FONT FACE="times new roman" size="3">
        	Concepto : <%= @ingresso.concepto%>
        </FONT>
      </td>
    </tr>

  
    <tr>
      <td  colspan="2">
        <FONT FACE="times new roman" size="3">
        -------------------------------------------
        </FONT>
      </td>
    </tr>

    <tr>
      <td colspan="2">
              <FONT FACE="times new roman" size="3">
                <%=  current_user.usuario_nome %>
              </FONT>
            </td>
    </tr>

    <tr>
      <td align="center" colspan="4">
        <FONT FACE="times new roman" size="3">
          --------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
        </FONT>
      </td>
    </tr>

    <tr>
      <td colspan="2">
        <FONT FACE="times new roman" size="3">
          Hecho por : <%=current_user.usuario_nome %>
          Unidade por : <%=current_unidade.unidade_nome%>
        </FONT>
      </td>
    </tr>

      <td align="center" colspan="4">
        <FONT FACE="times new roman" size="3">
        </FONT>
      </td>

  </table>

</body>





