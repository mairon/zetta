                    <table>
                      <tr>
                        <%= field_gs 'Exentas Gs.:',f,:exentas_guarani %>

                        <%= field_gs 'Gravadas 5% Gs.:',f,:gravadas_05_guarani,:onblur   => "CompraDocGravada05Gs()" %>

