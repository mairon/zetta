             	<td align="right"  >0</td>
             	<td align="right"  >0</td>
             	<td align="right"  >0</td>
		 <% end %>
        </tr>

        <% sub_exentas       += ex.to_f  %>
        <% sub_gravada_05    += g05.to_f %>
        <% sub_imposto_05    += i05.to_f %>
        <% sub_gravada_10    += g10.to_f %>
        <% sub_imposto_10    += i10.to_f %>
        <% sub_total_guarani += tot.to_f %>
      <% end %>
