    </div>
   </div>
   
  <div class="buttons">
<%= link_to 'Volver',compras_documento_compras_path(:id => params[:id]), :class => "button back" %>    
<%= f.submit "   Grabar  ",:disable_with => "Aguarde...", :class => "button"  %>
  </div>
  </div>

<% end %>
