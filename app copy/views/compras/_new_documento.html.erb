                    </tr>

                  </table>
                </fieldset>
              </td>
            </tr>
          </table>
        </td>
      </tr>

      <tr>
<!--DOCUMENTOS   !-->
        <td>
           <table>
              <tr>
                 <td>
                    <fieldset>
                       <legend>Tipo :</legend>
                       <table>
                          <tr>
                             <td>
                              <%= f.radio_button :tipo, 0,  :Checked => "True",  :onblur => "TipoCompra('0'),TipoDocumentoCompra()"%> Contado
