<body onload="CampoBusca()">
  <div class="group">
    <h2>
      <%= form_tag busca_persona_venda_personas_path, :method => "get" do %>
        Buscar :  <input id="busca" name="busca" type="text" onKeyUp="f(this),pesquisa(this.value)" onkeydown = "f(this)"/>

      <% end %>

    </h2>

    <div id="pagina">
    </div>


    <script language="javascript">
      function Fecha(id,cod_velho,nome,limite_credito,classificaco,ruc,tipo_maiorista,direcao,cidade_id,cidade,bairro)
      {
        window.opener.document.getElementById('venda_persona_id').value             = id;
        window.opener.document.getElementById('codigo').value                       = cod_velho;
        window.opener.document.getElementById('venda_persona_cod').value            = cod_velho;
        window.opener.document.getElementById('venda_persona_nome').value           = nome;
        window.opener.document.getElementById('venda_limite_credito').value         = limite_credito;
        window.opener.document.getElementById('venda_classificacao').value          = classificaco;
        window.opener.document.getElementById('venda_ruc').value                    = ruc;
        window.opener.document.getElementById('venda_tipo_maiorista').value         = tipo_maiorista;
        window.opener.document.getElementById('venda_direcao').value                = direcao;
        window.opener.document.getElementById('venda_cidade_id').value              = cidade_id;
        window.opener.document.getElementById('venda_cidade_nome').value            = cidade;
        window.opener.document.getElementById('venda_bairro').value                 = bairro;
        self.close();
      }

      function pesquisa(valor)

      {

        //FUNÇÃO QUE MONTA A URL E CHAMA A FUNÇÃO AJAX

        url="/personas/busca_persona_venda?busca="+valor+"&commit=Buscar";

        ajax(url);

      }


      function ajax(url)

      {



        //alert(nick);

        //alert(dest);

        //alert(msg);



        req = null;

        // Procura por um objeto nativo (Mozilla/Safari)

        if (window.XMLHttpRequest) {

          req = new XMLHttpRequest();

          req.onreadystatechange = processReqChange;

          req.open("GET",url,true);

          req.send(null);

          // Procura por uma versão ActiveX (IE)

        } else if (window.ActiveXObject) {

          req = new ActiveXObject("Microsoft.XMLHTTP");

          if (req) {



            req.onreadystatechange = processReqChange;

            req.open("GET",url,true);



            req.send();

          }

        }

      }



      function processReqChange()

      {



        // apenas quando o estado for "completado"

        if (req.readyState == 4) {



          // apenas se o servidor retornar "OK"



          if (req.status ==200) {



            // procura pela div id="pagina" e insere o conteudo

            // retornado nela, como texto HTML



            document.getElementById('pagina').innerHTML = req.responseText;



          } else {

            alert("Houve um problema ao obter os dados:n" + req.statusText);

          }

        }

      }
    </script>
  </div>
</body>