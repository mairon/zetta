<h1 align="right" id="header">Documento</h1>

<%= link_to 'Nuevo', new_compras_documento_path,:id => 'novo' %>

<div class="group">
<table >
	<tr>
		<td width="50" align="center">Cod.</td>
		<td width="80" align="center">Fecha</td>
		<td width="80" align="center">Tipo</td>
		<td width="400" align="center">Provedor</td>
		<td width="200" align="center">Documento</td>
		<td width="100" align="center">Total Dolar</td>
		<td width="100" align="center">Total Gs.</td>
	</tr>
</table>
<div class="rolagem" dir="div">

	<table>
		<tr>
		</tr>

		<% for compras_documento in @compras_documentos %>
		<tr class = "<%= cycle("cor1", "cor2") %>" >
			<td width="50" align="center" > <%= compras_documento.id%></td>
			<td width="80" align="center" > <%= compras_documento.data.strftime("%d/%m/%Y")%></td>
			<% if compras_documento.tipo_compra == 0  %>
			<td width="80" align="center" >CM</td>
			<% else %>
			<td width="80" align="center" >CMI</td>
			<% end %>
			<td width="400" align="left"  > <%= compras_documento.persona_nome%></td>
			<td width="200" align="center"  > <%= compras_documento.documento_numero_01%>-<%= compras_documento.documento_numero_02%>-<%= compras_documento.documento_numero%></td>
			<td width="100" align="right" > <%= number_to_currency( compras_documento.total_dolar, :format=>' %n ', :separator => ",")  %></td>
			<td width="100" align="right" > <%= number_to_currency( compras_documento.total_guarani, :format=>' %n ', :precision => 0)  %></td>

			<td><%= link_to 'Editar', edit_compras_documento_path(compras_documento) %></td>
			<td><%= link_to 'Borrar', compras_documento, :confirm => 'Tiene Certeza?', :method => :delete %></td>
		</tr>
		<% end %>
	</table>
</div>