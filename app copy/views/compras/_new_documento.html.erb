                        <td></td>
                        <td></td>
                        <%= field_us 'Impuestos 5% US$ :',f,:imposto_05_dolar%>

                        <%= field_us 'Impuestos 10% US$ :',f,:imposto_10_dolar%>
                      </tr>

                      <tr>
                        <td colspan="4"></td>
                        <%= field_us 'Total US$ :',f,:total_dolar %>
